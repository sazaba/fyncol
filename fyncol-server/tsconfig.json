{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node", // Asegura que TS encuentre tus paquetes correctamente
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // Te permite importar archivos .json si los necesitas
    "sourceMap": true, // Útil para debugear errores en Render viendo el código original .ts
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"] // Excluye la carpeta de salida para evitar bucles
}